<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallFragment"
    android:background="@color/black">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="175dp"
        android:layout_height="171dp"
        android:layout_marginTop="44dp"
        android:src="@drawable/ic_contact_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="301dp"
        android:layout_marginTop="23dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/tv_name_surname_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#FD0C0C"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_contact_phone_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="#FD0C0C"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_mail_contact_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="#FD0C0C"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_location_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="#FD0C0C"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_codigo_postal_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="#FD0C0C"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_provincia_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="#FD0C0C"
            android:textSize="30sp" />


    </LinearLayout>

    <Button
        android:id="@+id/bt_call"
        android:layout_width="103dp"
        android:layout_height="64dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="132dp"
        android:text="LLAMAR"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/bt_search_new_contact"
        app:layout_constraintHorizontal_bias="0.254"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/bt_search_new_contact"
        android:layout_width="175dp"
        android:layout_height="63dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="LLAMAR OTRO CONTACTO"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"

        />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>